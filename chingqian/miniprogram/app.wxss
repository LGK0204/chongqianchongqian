/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f3f4f7;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 搜索框最外层 */
.search_view {
  display: flex;
  /* background-color: #FFFFFF; */
  border: 4rpx solid #3f72af;
  height: 60rpx;
  padding: 0 10rpx;
  margin: 20rpx 10rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  padding-left: 28rpx;
  /* box-shadow: 4rpx 4rpx 4rpx 4rpx #EBF4FF; */
}

/* 搜索小图标 */
.search_view_img {
  width: 60rpx;
  height: 60rpx;
}

/* 搜索框内部输入框 */
.search_view_input {
  height: 60rpx;
  padding: 10rpx;
  font-size: 30rpx;
  width: 600rpx;
}

/* 取消按钮 */
.search_view_text_button {
  width: 100rpx;
  font-size: 30rpx;
  line-height: 44rpx;
  padding: 10rpx;
  padding-left: 40rpx;
  border-left: 2rpx solid black;
}

.black{
  background: #000000;
  color: #ffffff;
}