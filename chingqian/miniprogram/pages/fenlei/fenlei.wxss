page{
  height: 100%;
}
.context{
  height: 100%;
}
.text_title {
  font-size: 40rpx;
  font-weight: 600;
  border-left: 10rpx solid #6060FF;
  border-radius: 10rpx;
  padding-left: 20rpx;
  margin: 20rpx 10rpx;
  background-color: #fefefe;
}

.title_black{
  background: black;
}

.list_view {
  /* height: 1080rpx; */
  width: 750rpx;
  margin: 10rpx;
  /* border: 2rpx solid red; */
  border-radius: 20rpx;
}

.list_line_view {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: left;
}

.list_item_view {
  width: 200rpx;
  margin-top: 30rpx;
  margin-left: 34rpx;
  /* border-bottom: 2rpx solid #797979; */
}

.list_item_view image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 15rpx;
  box-shadow: 4rpx 4rpx 4rpx #797979;
}

.item_info_title {
  font-size: 25rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
}