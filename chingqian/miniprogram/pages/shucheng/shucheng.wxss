/* pages/shucheng/shucheng.wxss */
page{
  height: 100%;
}
/* 标题 */
.text_title {
  font-size: 40rpx;
  font-weight: 600;
  border-left: 10rpx solid #6060FF;
  border-bottom: 2rpx solid #6060FF;
  border-radius: 10rpx;
  padding-left: 20rpx;
  margin: 20rpx 10rpx;
  /* background: #fefefe; */
  box-shadow: 2rpx 2rpx 2rpx 2rpx #6060FF;
}

/* 分类标题行样式 */
.type_title_line {
  display: flex;
  /* margin: 10rpx; */
  align-items: center;
  justify-content: space-around;
  margin: 30rpx auto;
}

/* 分类标题item */
.tpye_title_item {
  color: #FFFFFF;
  font-size: 30rpx;
  padding: 16rpx;
  border-radius: 10rpx;
  opacity: 0.8;
  box-shadow: 6rpx 6rpx #60D7FF;
}

.tpye_title_item:active {
  box-shadow: 4rpx 4rpx #60B0FF;
}

/* 滑动切换 */
.top_swiper {
  margin: 0 10rpx;
  height: 1708rpx;
  border: 2rpx solid #3f72af;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx gray;
  padding-bottom: 10rpx;
  /* background-color: #f3f4f7; */
}

/* 日排行、周排行、月排行标题view */
.type_title_view {
  display: flex;
  height: 70rpx;
}

/* 日排行、周排行、月排行标题 */
.mini_text_title {
  font-size: 30rpx;
  margin: 10rpx 20rpx;
  font-weight: 600;
  text-shadow: 2rpx 2rpx gray;
}

.mini_text_title.active {
  font-size: 40rpx;
  margin: 0rpx 20rpx;
  font-weight: 600;
  color: red;
}

/* 排行榜item */
.top_list_item {
  height: 200rpx;
  display: flex;
  margin: 10rpx 10rpx;
  border: 2rpx solid #caccd1;
  border-radius: 16rpx;
  /* background-color: #fefefe; */
}

.top_list_item_img {
  width: 140rpx;
  height: 180rpx;
  margin: 10rpx 10rpx;
}

.top_list_item_img image {
  width: 120rpx;
  height: 180rpx;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 4rpx #caccd1;
}

.top_list_item_text {
  margin: 10rpx 0;
}

.top_list_itm_book_name {
  font-size: 26rpx;
  margin-top: 20rpx;
}

.top_list_itm_book_author {
  font-size: 24rpx;
  margin-top: 20rpx;
}

.top_list_itm_book_info {
  margin-top: 20rpx;
  /* 最大显示4行，超出部分替换为省略号 */
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 24rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行数字 */
.top_list_item_no {
  font-size: 40rpx;
  position: absolute;
  margin-top: 20rpx;
  right: 60rpx;
  font-style: italic;
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
  text-shadow: 2rpx 2rpx gray;
}

/* 推荐view */
.recommend_book_view {
  margin: 20rpx 20rpx;
  border: 2rpx solid #3f72af;
  border-radius: 20rpx;
  text-align: center;
  padding: 20rpx 2rpx;
  box-shadow: 2rpx 2rpx gray;
}

.recommend_book_img {
  margin: 10rpx auto;
  width: 200rpx;
  height: 270rpx;
  border-radius: 20rpx;
  /* box-shadow: 4rpx 4rpx 4rpx #caccd1; */
}

.recommend_book_img image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 6rpx 6rpx 6rpx #caccd1;
}

.recommend_book_name {
  font-size: 30rpx;
}

.recommend_book_author {
  font-size: 20rpx;
  margin-top: 20rpx;
}

.recommend_book_info {
  font-size: 20rpx;
  text-indent: 2em;
  margin: 10px;
  text-align: left;
}

.recommend_book_button_view {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 20rpx;
}

.recommend_book_button_dislike {
  /* font-size: 30rpx; */
  /* border: 2rpx solid #00205b; */
  background-color: #98ebeb;
  border-radius: 40rpx;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 4rpx 4rpx 4rpx #60D7FF;
}

.recommend_book_button_dislike:active {
  /* border: 2rpx solid #00205b; */
  background-color: #81c9eb;
  box-shadow: 2rpx 2rpx 2rpx #60D7FF;
}

.recommend_book_button_like {
  /* border: 2rpx solid #e4002b; */
  background-color: #fc94ae;
  border-radius: 40rpx;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 4rpx 4rpx 4rpx #60D7FF;
}

.recommend_book_button_like:active {
  /* border: 2rpx solid #e4002b; */
  background-color: #f87c9b;
  box-shadow: 2rpx 2rpx 2rpx #60D7FF;
}