/* pages/geren/geren.wxss */
page{
  height: 100%;
}
.context{
  padding: 20rpx;
  height: 100%;
}
.login_view {
  margin-top: 600rpx;
}

.icon_view {
  width: 300rpx;
  display: flex;
  margin: 60rpx auto;
  padding-left: 10rpx;
}

.icon_img {
  margin-left: 30rpx;
}

.icon_text {
  margin-top: 4rpx;
  margin-left: 20rpx;
  color: #52565e;
}

.personal_info {
  /* height: 100%; */
  /* margin: 60rpx auto; */
  margin-bottom: 40rpx;
  border: 2rpx solid #3f72af;
  padding: 10rpx;
  border-radius: 20rpx;
  box-shadow: 4rpx 4rpx 4rpx #797979;
}

.img_info {
  text-align: center;
  margin: 0 auto;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  box-shadow: 4rpx 4rpx 4rpx #797979;
}

.img_info image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  margin: 0 auto;
}

.name_info {
  text-align: center;
  margin: 20rpx auto;
  text-shadow: 2rpx 2rpx 2rpx #797979;
}

.progress_info {
  text-shadow: 2rpx 2rpx black;
}

.lv_text {
  margin-top: 20rpx;
  text-shadow: 2rpx 2rpx 2rpx #797979;
}

.lv_progress {
  width: 600rpx;
  margin: 10rpx auto;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 4rpx #797979;
}

.message_view {
  display: flex;
  justify-content: space-around;
  border: 2rpx solid #3f72af;
  border-radius: 20rpx;
  height: 100rpx;
  align-items: center;
  box-shadow: 4rpx 4rpx 4rpx #797979;
}

.message_item {
  padding: 20rpx;
  width: 180rpx;
}

.login_time_view{
  /* margin-top: 20rpx; */
  padding: 10rpx;
  text-align: center;
  border: 2rpx solid #3f72af;
  border-radius: 20rpx;
  /* height: 100rpx; */
  box-shadow: 4rpx 4rpx 4rpx #797979;
}

.info_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  /* border: 2rpx solid black; */
  border-radius: 20rpx;
  /* padding:10rpx 5rpx; */
  align-items: center;
  margin-top: 20rpx;
  width: 680rpx;
}

.info_list_item {
  height: 120rpx;
  width: 320rpx;
  margin-top: 20rpx;
  text-align: center;
  border-radius: 20rpx;
  border: 2rpx solid #3f72af;
  box-shadow: 4rpx 4rpx 4rpx #797979;
}

.info_list_item:active {
  box-shadow: 2rpx 2rpx 2rpx #797979;
  background-color: #60FFFF;
}

.info_list_img {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}

.info_list_img image {
  width: 50rpx;
  height: 50rpx;
}

.info_list_text {
  margin-top: 2rpx;
}

.setting_view_list{
  padding: 20rpx;
  text-align: center;
  border: 2rpx solid #3f72af;
  border-radius: 20rpx;
  /* height: 100rpx; */
  box-shadow: 4rpx 4rpx 4rpx #797979;
  margin-top: 40rpx;
  /* min-height: 200rpx; */
}

.setting_view_item{
  text-align: justify;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.setting_view_item_text{
  font-size: 40rpx;
}